#
# Webapp
#

FROM dockermediacloud/mediacloud-common:latest

# Install Apache
RUN \
    apt-get -y --no-install-recommends install apache2 && \
    apt-get -y --no-install-recommends install libapache2-mod-fcgid && \
    a2enmod alias && \
    a2enmod env && \
    a2enmod fcgid && \
    a2enmod mime && \
    a2enmod rewrite && \
    true

# FIXME
#
# (optional) URL to redirect /login/register page to
#apache2_redirect_login_register_url: https://tools.mediacloud.org/#/user/signup
#
# (optional) URL to redirect /login/forgot page to
#apache2_redirect_login_forgot_url: https://tools.mediacloud.org/#/user/request-password-reset

# Install Perl dependencies
COPY src/cpanfile /var/tmp/
RUN \
    cd /var/tmp/ && \
    cpanm \
        --mirror "$MEDIACLOUD_PERL_CPAN_MIRROR" \
        --mirror-only \
        --notest \
        --verbose \
        --installdeps \
        . && \
    rm cpanfile && \
    rm -rf /root/.cpanm/ && \
    true

# Copy static files
RUN \
    mkdir -p /var/www/ && \
    rm -rf /var/www/* && \
    true

# Set up logging
RUN \
    rm -f /var/log/apache2/access.log && \
    rm -f /var/log/apache2/error.log && \
    ln -s /proc/1/fd/1 /var/log/apache2/access.log && \
    ln -s /proc/1/fd/2 /var/log/apache2/error.log && \
    true

# Configure Apache
COPY conf/001-mediacloud.conf /etc/apache2/sites-available/
RUN \
    #
    # Prepend ServerRoot to main configuration
    sed -i '1i ServerRoot /etc/apache2/' /etc/apache2/apache2.conf && \
    #
    # Enable Media Cloud configuration
    a2dissite 000-default && \
    a2ensite 001-mediacloud && \
    true

# Copy FastCGI helpers
COPY bin/ /

# Copy Perl sources
COPY src/perl/ /usr/share/perl5/

# Copy Python sources
COPY src/python/ /usr/lib/python3/dist-packages/

# Static files
RUN mkdir -p /mediacloud_webapp_static/rss_dumps/

# Daily RSS dumps generated by "cron_generate_daily_rss_dumps" container
VOLUME /mediacloud_webapp_static/rss_dumps/

# Apache's port
EXPOSE 80

# Run Apache
CMD ["apachectl", "-d", ".", "-f", "/etc/apache2/apache2.conf", "-e", "info", "-DFOREGROUND"]
