        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Set media subject country Cron job
    # -----------------------------------
    #
    cron-set-media-subject-country:
        image: dockermediacloud/cron-set-media-subject-country:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Print long running job states
    # -----------------------------
    #
    cron-print-long-running-job-states:
        image: dockermediacloud/cron-print-long-running-job-states:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Solr shards 01-24
    # -----------------
    #
    solr-shard-01:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_01:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-02:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_02:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-03:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_03:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-04:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_04:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-05:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_05:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-06:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_06:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-07:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_07:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-08:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_08:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host1

    solr-shard-09:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_09:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
