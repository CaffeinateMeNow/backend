version: "3.7"

#
# Bigger open file limit
# ======================
#
# Apply this anchor in containers that need bigger open file limit (ulimit -n).
#
x-bigger-open-file-limit:   &bigger-open-file-limit
    ulimits:
        nofile:
            soft: 65536
            hard: 65536


#
# Solr shard base service
# =======================
#
# Solr shards are not easily replicatable (because resharding would have to be
# done manually), also every Solr shard has to have its very own named volume
# to write the data to, so instead of replicating Solr shards with
# "deploy/replicas", we define every shard as its own independent service.
#
x-solr-shard_base:   &solr-shard_base
    image: dockermediacloud/solr-shard:containers_release
    environment:
        # Shard count (every individual shard needs to know the total count)
        #
        # (keep in sync with how many shard services get actually defined in
        # the "services" section, e.g. solr-shard-01, solr-shard-02,
        # ..., solr-shard-24)
        MC_SOLR_SHARD_COUNT: "24"
    depends_on:
        - solr-zookeeper
    expose:
        - 8983
    networks:
        default:
            aliases:
                # To make Solr clients be able to round-robin between the
                # shards, all of the shard services get assigned the same
                # "solr-shard" network alias.
                - solr-shard
    # Increase open file limit
    <<: *bigger-open-file-limit

# Base "deploy section" for every Solr shard
x-solr-shard_base_deploy_base:  &solr-shard_base_deploy_base
    restart_policy:
        # Don't autorestart Solr shards because if they have failed, they will
        # probably fail again and instead we should go out and take a look into
        # why exactly they are failing
        condition: none
    # Every shard runs as its own independent, non-replicated service
    resources:
        limits:
            # CPU core limit
            #
            # (each mcquery* has 32 cores and will be running 8 shards
            # each, so 32 / 8 = 4)
            cpus: "4"
            # RAM limit
            #
            # (each mcquery* has 192 GB of RAM and will be running 8 shards
            # each, so 192 / 8 = 24)
            memory: 24G

# Placement constraints for Solr shards that run on host #1 (e.g. mcquery1)
x-solr-shard_base_deploy_placement_host1:   &solr-shard_base_deploy_placement_host1
    placement:
        constraints:
            # Must run on the host with Solr data volume
            - node.labels.role-solr-shards-host1 == true

# Placement constraints for Solr shards that run on host #2 (e.g. mcquery2)
x-solr-shard_base_deploy_placement_host2:   &solr-shard_base_deploy_placement_host2
    placement:
        constraints:
            # Must run on the host with Solr data volume
            - node.labels.role-solr-shards-host2 == true

# Placement constraints for Solr shards that run on host #3 (e.g. mcquery4)
x-solr-shard_base_deploy_placement_host3:   &solr-shard_base_deploy_placement_host3
    placement:
        constraints:
            # Must run on the host with Solr data volume
            - node.labels.role-solr-shards-host3 == true


#
# Services
# ========
#
services:

    #
    # CLIFF fetch annotation
    # ----------------------
    #
    cliff-fetch-annotation:
        image: dockermediacloud/cliff-fetch-annotation:containers_release
        networks:
            - default
        env_file: common.env
        environment:
            # Annotator endpoint URL
            MC_CLIFF_ANNOTATOR_URL: ""
        depends_on:
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            restart_policy:
                condition: none
            # Worker count
            replicas: 4
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # CLIFF update story tags
    # -----------------------
    #
    cliff-update-story-tags:
        image: dockermediacloud/cliff-update-story-tags:containers_release
        networks:
            - default
        env_file: common.env
        environment:
            # CLIFF version tag
            MC_CLIFF_VERSION_TAG: "cliff_clavin_v2.4.1"
            # Tag set to use for geographical name entities
            MC_CLIFF_GEONAMES_TAG_SET: "cliff_geonames"
            # Tag set to use for organization name entities
            MC_CLIFF_ORGANIZATIONS_TAG_SET: "cliff_organizations"
            # Tag set to use for person name entities
            MC_CLIFF_PEOPLE_TAG_SET: "cliff_people"
        depends_on:
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            # Worker count
            replicas: 1
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Crawler provider
    # ----------------
    #
    crawler-provider:
        image: dockermediacloud/crawler-provider:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "1G"

    #
    # Crawler fetcher
    # ---------------
    #
    crawler-fetcher:
        image: dockermediacloud/crawler-fetcher:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            # Worker count
            replicas: 8
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "512M"

    #
    # Create missing PostgreSQL partitions
    # ------------------------------------
    #
    create-missing-partitions:
        image: dockermediacloud/create-missing-partitions:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Extract article HTML from page HTML
    # -----------------------------------
    #
    extract-article-from-page:
        image: dockermediacloud/extract-article-from-page:containers_release
        networks:
            - default
        env_file: common.env
        expose:
            # HTTP extraction service
            - 8080
        deploy:
            # Worker count
            replicas: 8
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "512M"

    #
    # Extract and vector stories
    # --------------------------
    #
    extract-and-vector:
        image: dockermediacloud/extract-and-vector:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - extract-article-from-page
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            # Worker count
            replicas: 24
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Fetch story stats from Facebook
    # -------------------------------
    #
    facebook-fetch-story-stats:
        image: dockermediacloud/facebook-fetch-story-stats:containers_release
        networks:
            - default
        env_file: common.env
        environment:
            # Facebook application ID
            MC_FACEBOOK_APP_ID: ""
            # Facebook application secret
            MC_FACEBOOK_APP_SECRET: ""
            # Timeout for API calls
            MC_FACEBOOK_TIMEOUT: "60"
        depends_on:
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            # Worker count
            replicas: 4
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Generate daily RSS dumps Cron job
    # ---------------------------------
    #
    cron-generate-daily-rss-dumps:
        image: dockermediacloud/cron-generate-daily-rss-dumps:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        volumes:
            # Shared with "webapp-httpd" container:
            - vol_daily_rss_dumps:/var/lib/daily_rss_dumps/
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the same host as the webapp-httpd server because they will be
                    # sharing the volume with generated static RSS dumps
                    - node.labels.role-webapp-httpd == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "512M"

    #
    # Generate media health report Cron job
    # -------------------------------------
    #
    cron-generate-media-health:
        image: dockermediacloud/cron-generate-media-health:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Generate daily / weekly user summary Cron job
    # ---------------------------------------------
    #
    cron-generate-user-summary:
        image: dockermediacloud/cron-generate-user-summary:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Import stories into Solr
    # ------------------------
    #
    import-solr-data:
        image: dockermediacloud/import-solr-data:containers_release
        networks:
            - default
        env_file: common.env
        environment:
            # Jobs (forks) to start for the import
            # (keep in sync with CPU count)
            MC_SOLR_IMPORT_JOBS: 1
            # Stories to import into Solr on a single run
            MC_SOLR_IMPORT_MAX_QUEUED_STORIES: 100000
        depends_on:
            - postgresql-pgbouncer
            - solr-shard-01
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "16"
                    # RAM limit
                    memory: "4G"

    #
    # Import stories by scraping Feedly
    # ---------------------------------
    #
    import-stories-feedly:
        image: dockermediacloud/import-stories-feedly:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            # Writes stories to PostgreSQL
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit (uses quite a lot of it until it OOMs)
                    memory: "4G"

    #
    # OpenDKIM server
    # ---------------
    #
    mail-opendkim-server:
        image: dockermediacloud/mail-opendkim-server:containers_release
        networks:
            - default
        environment:
            # Top-level domain to use for signing emails, e.g. "mediacloud.org"
            # (keep in sync with MC_MAIL_POSTFIX_DOMAIN)
            MC_MAIL_OPENDKIM_DOMAIN: "testmediacloud.ml"
            # Mail server hostname, e.g. "mail" for "mail.mediacloud.org"
            # (keep in sync with MC_MAIL_POSTFIX_HOSTNAME)
            MC_MAIL_OPENDKIM_HOSTNAME: "mail"
        expose:
            # OpenDKIM port used by Postfix
            - "12301"
        volumes:
            - vol_opendkim_config:/etc/opendkim/
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the host with OpenDKIM data volume
                    - node.labels.role-mail-opendkim == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "128M"

    #
    # Postfix server
    # ---------------
    #
    mail-postfix-server:
        image: dockermediacloud/mail-postfix-server:containers_release
        networks:
            - default
        environment:
            # Top-level domain to use for signing emails, e.g. "mediacloud.org"
            # (keep in sync with MC_MAIL_OPENDKIM_DOMAIN)
            MC_MAIL_POSTFIX_DOMAIN: "testmediacloud.ml"
            # Mail server hostname, e.g. "mail" for "mail.mediacloud.org"
            # (keep in sync with MC_MAIL_OPENDKIM_HOSTNAME)
            MC_MAIL_POSTFIX_HOSTNAME: "mail"
        expose:
            # Expose SMTP to mail senders
            - "25"
        volumes:
            - vol_postfix_data:/var/lib/postfix/
            - vol_postfix_local_mail:/var/lib/mail/
            - vol_postfix_queue:/var/spool/postfix/
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the host with Postfix data volume
                    - node.labels.role-mail-postfix == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "128M"

    #
    # NYTLabels fetch annotation
    # ----------------------
    #
    nytlabels-fetch-annotation:
        image: dockermediacloud/nytlabels-fetch-annotation:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - predict-news-labels
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            # Worker count
            replicas: 4
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # NYTLabels update story tags
    # -----------------------
    #
    nytlabels-update-story-tags:
        image: dockermediacloud/nytlabels-update-story-tags:containers_release
        networks:
            - default
        env_file: common.env
        environment:
            # NYTLabels version tag
            MC_NYTLABELS_VERSION_TAG: "nyt_labeller_v1.0.0"
            # Tag set to use for NYTLabels-derived tags
            MC_NYTLABELS_TAG_SET: "nyt_labels"
        depends_on:
            - postgresql-pgbouncer
            - rabbitmq-server
        deploy:
            # Worker count
            replicas: 1
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # PgBouncer
    # ---------
    #
    postgresql-pgbouncer:
        image: dockermediacloud/postgresql-pgbouncer:containers_release
        networks:
            - default
        depends_on:
            - postgresql-server
        expose:
            - 6432
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # PostgreSQL server
    # -----------------
    #
    postgresql-server:
        image: dockermediacloud/postgresql-server:containers_release
        networks:
            - default
        expose:
            - 5432
        volumes:
            - vol_postgresql_data:/var/lib/postgresql/
        # Increase open file limit
        <<: *bigger-open-file-limit
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the host with PostgreSQL data volume
                    - node.labels.role-postgresql-server == true

    #
    # NYT-Based News Tagger service
    # -----------------------------
    #
    predict-news-labels:
        image: dockermediacloud/predict-news-labels:containers_release
        networks:
            - default
        expose:
            - 8080
        deploy:
            # Worker count
            replicas: 1
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Workers don't necessarily *have* to run on the very same host,
                    # but if they do, they'll be able to share a single mmap'ped dataset
                    # and thus conserve memory
                    - node.labels.role-predict-news-labels == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "4G"

    #
    # Purge PostgreSQL object caches
    # ------------------------------------
    #
    purge-object-caches:
        image: dockermediacloud/purge-object-caches:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # RabbitMQ
    # --------
    #
    rabbitmq-server:
        image: dockermediacloud/rabbitmq-server:containers_release
        networks:
            - default
        expose:
            - 5672
            - 15672
        volumes:
            - vol_rabbitmq_data:/var/lib/rabbitmq/
        # Increase open file limit
        <<: *bigger-open-file-limit
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the host with RabbitMQ data volume
                    - node.labels.role-rabbitmq-server == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "4"
                    # RAM limit
                    memory: "2G"

    #
    # Refresh stats Cron job
    # ----------------------
    #
    cron-refresh-stats:
        image: dockermediacloud/cron-refresh-stats:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

