            replicas: 2
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "512M"

    #
    # Report rescraping changes Cron job
    # ----------------------------------
    #
    cron-rescraping-changes:
        image: dockermediacloud/cron-rescraping-changes:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - postgresql-pgbouncer
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Set media primary language Cron job
    # -----------------------------------
    #
    cron-set-media-primary-language:
        image: dockermediacloud/cron-set-media-primary-language:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
