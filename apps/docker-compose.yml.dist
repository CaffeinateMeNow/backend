    #
    # Munin node
    # ----------
    #
    munin-node:
        image: dockermediacloud/munin-node:containers_release
        networks:
            - default
        depends_on:
            # Monitors data on PostgreSQL
            - postgresql-pgbouncer
            # Monitors data on Solr
            - solr-shard-01
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "512M"

    #
    # Munin Cron stats collector
    # --------------------------
    #
    munin-cron:
        image: dockermediacloud/munin-cron:containers_release
        networks:
            - default
        depends_on:
            # Reads data from Munin node
            - munin-node
        volumes:
            # Shared with "munin-httpd" container:
            - vol_munin_data:/var/lib/munin/
            # Shared with "munin-httpd" container:
            - vol_munin_html:/var/cache/munin/www/
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the same host as munin-httpd as they share two volumes
                    - node.labels.role-munin-httpd == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Munin HTTP server
    # -----------------
    #
    munin-httpd:
        image: dockermediacloud/munin-httpd:containers_release
        networks:
            - default
        expose:
            # Web UIs port
            - 8080
        depends_on:
            # Reads data generated by Munin stats collector
            - munin-cron
        volumes:
            # Shared with "munin-cron" container:
            - vol_munin_data:/var/lib/munin/
            # Shared with "munin-cron" container:
            - vol_munin_html:/var/cache/munin/www/
        deploy:
            restart_policy:
                condition: none
            placement:
                constraints:
                    # Must run on the same host as munin-cron as they share two volumes
                    - node.labels.role-munin-httpd == true
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

