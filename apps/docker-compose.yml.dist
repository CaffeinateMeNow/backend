                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # (Re)scrape media
    # ----------------
    #
    rescrape-media:
        image: dockermediacloud/rescrape-media:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
