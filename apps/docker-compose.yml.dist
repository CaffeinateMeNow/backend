    solr-shard-10:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_10:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host2

    solr-shard-11:
        <<: *solr-shard_base
        volumes:
            - vol_solr_shard_data_11:/var/lib/solr/
        deploy:
            <<: *solr-shard_base_deploy_base
            <<: *solr-shard_base_deploy_placement_host2

    solr-shard-12:
