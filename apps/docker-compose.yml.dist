        expose:
            - 2181
            - 2888
            - 3888
        deploy:
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "1G"

    #
    # Extract story links for a topic
    # -------------------------------
    #
    topics-extract-story-links:
        image: dockermediacloud/topics-extract-story-links:containers_release
        networks:
            - default
        env_file: common.env
        depends_on:
            - extract-article-from-page
        deploy:
            # Worker count
            replicas: 32
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

    #
    # Fetch link for a topic
    # ----------------------
    #
    topics-fetch-link:
        image: dockermediacloud/topics-fetch-link:containers_release
        networks:
            - default
        env_file: common.env
        deploy:
            # Worker count
            replicas: 8
            restart_policy:
                condition: none
            resources:
                limits:
                    # CPU core limit
                    cpus: "1"
                    # RAM limit
                    memory: "256M"

